-- Values

local settingsIsOpen = Instance.new("BoolValue", mainFrame)
settingsIsOpen.Name = "SettingsIsOpen"
settingsIsOpen.Value = false
	
-- Buttons

openButton.MouseButton1Click:Connect(function()
	mainFrame.BackgroundTransparency = 0
	if settingsIsOpen.Value == true then
		settingsFrame.Visible = true
	end
end)

minimizeButton.MouseButton1Click:Connect(function()
	mainFrame.BackgroundTransparency = 1
	settingsFrame.Visible = false
end)

closeButton.MouseButton1Click:Connect(function()
	gui.Enabled = false
end)

settingsButton.MouseButton1Click:Connect(function()
	if gui.Enabled and mainFrame.BackgroundTransparency == 0 then
		settingsIsOpen.Value = not settingsIsOpen.Value 
	end
end)

confirmPlrSettings.MouseButton1Click:Connect(function()
	local walkSpeed = walkSpeedTextBox.Text
	local jumpPower = jumpPowerTextBox.Text
	local char = plr.Character
	if char then
		if tonumber(walkSpeed) ~= nil then
			char.Humanoid.WalkSpeed = tonumber(walkSpeed)
		else
			char.Humanoid.WalkSpeed = 16
		end
		if tonumber(jumpPower) ~= nil then
			char.Humanoid.JumpPower = tonumber(jumpPower)
		else
			char.Humanoid.JumpPower = 50
		end
	end
end)

settingsIsOpen.Changed:Connect(function()
	if settingsIsOpen.Value == true then
		settingsFrame.Visible = true
	else
		settingsFrame.Visible = false
	end
end)

mouse.KeyDown:Connect(function(pressed)
	pressed = pressed:lower()
	if pressed == "m" then
		gui.Enabled = not gui.Enabled
	end
end)
